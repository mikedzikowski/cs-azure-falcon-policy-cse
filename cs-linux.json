        "parameters": {
          "effect": {
            "value": "[parameters('policyEffect')]"
          },
          "FalconClientId": {
            "value": "[parameters('FalconClientId')]"
          },
          "FalconClientSecret": {
            "value": "[parameters('FalconClientSecret')]"
          },
