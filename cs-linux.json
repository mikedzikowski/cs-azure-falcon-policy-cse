      "apiVersion": "2022-04-01",
      "name": "[guid(extensionResourceId(managementGroup().id, 'Microsoft.Authorization/policyAssignments', parameters('policyAssignmentName')), variables('vmRoleDefinitionId'), managementGroup().id, 'CrowdStrikeFalcon')]",
      "properties": {
        "principalId": "[reference(extensionResourceId(managementGroup().id, 'Microsoft.Authorization/policyAssignments', parameters('policyAssignmentName')), '2020-09-01', 'full').identity.principalId]",
